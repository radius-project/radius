{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}', 'radius', 'frontend-backend')]"
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Components",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'frontend')]",
      "kind": "radius.dev/Container@v1alpha1",
      "properties": {
        "run": {
          "container": {
            "image": "rynowak/frontend:0.5.0-dev"
          }
        },
        "dependsOn": [
          {
            "name": "backend",
            "kind": "http",
            "setEnv": {
              "SERVICE__BACKEND__HOST": "host",
              "SERVICE__BACKEND__PORT": "port"
            }
          }
        ],
        "provides": [
          {
            "name": "frontend",
            "kind": "http",
            "containerPort": 80
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'radius', 'frontend-backend'), '/')[0], split(format('{0}/{1}', 'radius', 'frontend-backend'), '/')[1])]"
      ]
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Components",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'backend')]",
      "kind": "radius.dev/Container@v1alpha1",
      "properties": {
        "run": {
          "container": {
            "image": "rynowak/backend:0.5.0-dev"
          }
        },
        "provides": [
          {
            "name": "backend",
            "kind": "http",
            "containerPort": 80
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'radius', 'frontend-backend'), '/')[0], split(format('{0}/{1}', 'radius', 'frontend-backend'), '/')[1])]"
      ]
    },
    {
      "type": "Microsoft.CustomProviders/resourceProviders/Applications/Deployments",
      "apiVersion": "2018-09-01-preview",
      "name": "[format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'implicit')]",
      "properties": {
        "components": [
          {
            "componentName": "frontend"
          },
          {
            "componentName": "backend"
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications', split(format('{0}/{1}', 'radius', 'frontend-backend'), '/')[0], split(format('{0}/{1}', 'radius', 'frontend-backend'), '/')[1])]",
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications/Components', split(format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'backend'), '/')[0], split(format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'backend'), '/')[1], split(format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'backend'), '/')[2])]",
        "[resourceId('Microsoft.CustomProviders/resourceProviders/Applications/Components', split(format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'frontend'), '/')[0], split(format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'frontend'), '/')[1], split(format('{0}/{1}/{2}', 'radius', 'frontend-backend', 'frontend'), '/')[2])]"
      ]
    }
  ]
}