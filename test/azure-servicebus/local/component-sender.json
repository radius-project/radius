{
    "kind": "radius.dev/Container@v1alpha1",
    "properties": {
        "name": "sender",
        "run": {
            "container": {
                "image": "vinayada/servicebus-sender:latest"
            }
        },
        "provides": [
            {
                "name": "sender",
                "kind": "http",
                "containerPort": 8080
            }
        ],
        "dependsOn": [
            {
                "name": "sb",
                "kind": "azure.com/ServiceBus",
                "setEnv": {
                    "SB_CONNECTION": "connectionString"
                }
            }
        ]
    }
}