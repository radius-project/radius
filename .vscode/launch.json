{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to UCP",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 40001,
            "host": "127.0.0.1"
        },
        {
            "name": "Attach to Controller",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 40002,
            "host": "127.0.0.1"
        },
        {
            "name": "Attach to Applications RP",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 40003,
            "host": "127.0.0.1"
        },
        {
            "name": "Attach to Dynamic RP",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 40004,
            "host": "127.0.0.1"
        },
        {
            "name": "Launch Applications RP (Direct)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/applications-rp",
            "args": ["--config-file", "${workspaceFolder}/cmd/applications-rp/applications-rp-dev.yaml"],
            "env": {},
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Controller (Direct)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/controller",
            "args": ["--config-file", "${workspaceFolder}/cmd/controller/controller-dev.yaml"],
            "env": {},
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Dynamic RP (Direct)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/dynamic-rp",
            "args": ["--config-file", "${workspaceFolder}/cmd/dynamic-rp/dynamicrp-dev.yaml"],
            "env": {},
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch UCP (Direct)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/ucpd",
            "args": ["--config-file", "${workspaceFolder}/cmd/ucpd/ucp-dev.yaml"],
            "env": {},
            "cwd": "${workspaceFolder}"
        }
    ]
}
