{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "terraform": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "hashicorp/terraform-mcp-server:0.4.0"]
    },
    "gopls": {
      "command": "gopls",
      "args": ["serve", "-mcp.listen=localhost:8092"]
    }
  }
}
