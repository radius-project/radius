{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2019",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "lib": ["es2020"],
    "newLine": "LF",
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.d.ts"]
}
