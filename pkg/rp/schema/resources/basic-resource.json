{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "BasicResourceProperties": {
      "description": "Basic properties of a Radius resource.",
      "type": "object",
      "properties": {
        "status": {
          "$ref": "#/definitions/ResourceStatus",
          "description": "Status of the resource"
        }
      }
    },
    "ResourceStatus": {
      "description": "Status of a resource.",
      "type": "object",
      "properties": {
        "provisioningState": {
          "type": "string",
          "description": "Provisioning state of the resource"
        },
        "provisioningErrorDetails": {
          "type": "string",
          "description": "Provisioning errors for the resource"
        },
        "healthState": {
          "type": "string",
          "description": "Health state of the resource"
        },
        "healthErrorDetails": {
          "type": "string",
          "description": "Health errors for the resource"
        },
        "outputResources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/OutputResource"
          }
        }
      }
    },
    "OutputResource": {
      "description": "Properties of an output resource.",
      "type": "object",
      "properties": {}
    }
  }
