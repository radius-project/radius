{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "AzureServiceBusComponentResource": {
      "description": "Component for Azure ServiceBus",
      "type": "object",
      "x-ms-azure-resource": true,
      "required": [
        "properties"
      ],
      "allOf": [
        {
          "$ref": "../common-types.json#/definitions/TrackedResource"
        }
      ],
      "properties": {
        "properties": {
          "$ref": "#/definitions/AzureServiceBusComponentProperties"
        }
      }
    },
    "AzureServiceBusComponentProperties": {
      "type": "object",
      "additionalProperties": false,
      "allOf": [
        {
          "$ref": "basic-component.json#/definitions/BasicComponentProperties"
        }
      ],
      "required": [
        "managed",
        "queue"
      ],
      "properties": {
        "managed": {
          "description": "Indicates if the resource is Radius-managed. For now only true is accepted for this Component",
          "type": "boolean",
          "enum": [
            true
          ],
          "examples": [
            true
          ]
        },
        "queue": {
          "description": "The name of the queue",
          "type": "string"
        }
      }
    }
  }
