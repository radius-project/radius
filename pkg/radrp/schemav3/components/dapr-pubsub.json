{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "DaprPubSubComponentResource": {
      "description": "Component for Dapr Pub/Sub",
      "required": [
        "kind",
        "properties"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "dapr.io/PubSubTopic@v1alpha1"
          ]
        },
        "properties": {
          "$ref": "#/definitions/DaprPubSubComponentProperties"
        }
      }
    },
    "DaprPubSubComponentProperties": {
      "allOf": [
        {
          "$ref": "basic-component.json#/definitions/BasicComponentProperties"
        }
      ],
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "required": [
            "kind"
          ],
          "properties": {
            "managed": {
              "description": "Indicates if the resource is Radius-managed. If false, a resource is required",
              "type": "boolean"
            },
            "kind": {
              "description": "Dapr Pub/Sub kind",
              "type": "string"
            },
            "topic": {
              "description": "PubSub topic",
              "type": "string"
            },
            "resource": {
              "description": "PubSub resource, for unmanaged",
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
