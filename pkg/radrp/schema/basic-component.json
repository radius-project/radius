{
  "definitions": {
    "BasicComponentProperties": {
      "description": "Basic properties of a component.",
      "type": "object",
      "properties": {
        "revision": {
          "type": "string",
          "description": "Revision of the component"
        },
        "uses": {
          "type": "array",
          "description": "Uses spec of the component",
          "items": {
            "$ref": "#/definitions/ComponentDependency"
          }
        },
        "traits": {
          "type": "array",
          "description": "Traits spec of the component",
          "items": {
            "$ref": "traits.json#/definitions/ComponentTrait"
          }
        },
        "status": {
          "type": "object",
          "$ref": "#/definitions/ComponentStatus",
          "description": "Status of the component"
        }
      }
    },
    "ComponentStatus": {
      "description": "Status of a component.",
      "type": "object",
      "properties": {
        "provisioningState": {
          "type": "string",
          "description": "Provisioning state of the component"
        },
        "healthState": {
          "type": "string",
          "description": "Health state of the component"
        },
        "outputResources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ComponentOutputResource"
          }
        }
      }
    },
    "ComponentOutputResource": {
      "description": "Properties of a component.",
      "type": "object",
      "properties": {}
    },
    "ComponentDependency": {
      "description": "A binding used by an Radius Component",
      "type": "object",
      "properties": {
        "binding": {
          "type": "string"
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "secrets": {
          "$ref": "#/definitions/ComponentDependencySecrets"
        }
      }
    },
    "ComponentDependencySecrets": {
      "description": "Binding values that are stored in and read from a given secret store",
      "type": "object",
      "properties": {
        "store": {
          "type": "string"
        },
        "keys": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
