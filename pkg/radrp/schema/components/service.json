{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "ServiceResource": {
      "description": "The radius.dev/Service resource provides an abstraction for a long-running process that can run as an executable or container on any Radius platform",
      "type": "object",
      "x-ms-azure-resource": true,
      "allOf": [
        {
          "$ref": "../common-types.json#/definitions/ProxyResource"
        }
      ],
      "required": [
        "properties"
      ],
      "properties": {
        "properties": {
          "$ref": "#/definitions/ServiceProperties"
        }
      }
    },
    "ServiceProperties": {
      "type": "object",
      "additionalProperties": false,
      "allOf": [
        {
          "$ref": "basic-component.json#/definitions/BasicComponentProperties"
        }
      ],
      "properties": {
        "connections": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ServiceConnection"
          }
        },
        "run": {
          "$ref": "#/definitions/ServiceRunnable"
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ports": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ServicePort"
          }
        },
        "readinessProbe": {
          "$ref": "basic-component.json#/definitions/HealthProbeProperties"
        },
        "livenessProbe": {
          "$ref": "basic-component.json#/definitions/HealthProbeProperties"
        },
        "traits": {
          "type": "array",
          "description": "Traits spec of the component",
          "items": {
            "$ref": "../traits.json#/definitions/ComponentTrait"
          }
        }
      }
    },
    "ServiceRunnable": {
      "description": "Configuration for running the service.",
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/definitions/ServiceContainer"
        },
        {
          "$ref": "#/definitions/ServiceExecutable"
        }
      ]
    },
    "ServiceContainer": {
      "type": "object",
      "required": [
        "kind",
        "image"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "description": "Runnable kind.",
          "type": "string",
          "enum": [
            "container"
          ]
        },
        "image": {
          "description": "The registry and image to download and run in your container",
          "type": "string"
        }
      }
    },
    "ServiceExecutable": {
      "type": "object",
      "required": [
        "kind",
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "description": "Runnable kind.",
          "type": "string",
          "enum": [
            "executable"
          ]
        },
        "args": {
          "description": "The arguments passed to the executable",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "workingDirectory": {
          "description": "The working directory of the executable",
          "type": "string"
        },
        "name": {
          "description": "The name of the executable to launch",
          "type": "string"
        }
      }
    },
    "ServicePort": {
      "description": "Specifies a listening port for the container",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dynamic": {
          "description": "Configures a dynamically assigned port number",
          "type": "boolean"
        },
        "port": {
          "description": "The listening port number",
          "type": "number"
        },
        "protocol": {
          "description": "Protocol in use by the port",
          "type": "string",
          "enum": [
            "TCP",
            "UDP"
          ]
        },
        "provides": {
          "description": "Specifies a route provided by this port",
          "type": "string"
        }
      }
    },
    "ServiceConnection": {
      "description": "Specifies a connection from the service to another resource",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {
          "description": "The kind of connection",
          "type": "string",
          "enum": [
            "azure.com/KeyVault",
            "azure.com/ServiceBusQueue",
            "dapr.io/DaprHttp",
            "dapr.io/PubSubTopic",
            "dapr.io/StateStore",
            "Grpc",
            "Http",
            "microsoft.com/SQL",
            "mongo.com/MongoDB",
            "rabbitmq.com/MessageQueue",
            "redislabs.com/Redis"
          ]
        },
        "source": {
          "description": "The source of the connection",
          "type": "string"
        }
      }
    }
  }
}