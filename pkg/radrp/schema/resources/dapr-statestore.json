{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "DaprStateStoreResource": {
      "description": "Resource for Dapr state store",
      "type": "object",
      "x-ms-azure-resource": true,
      "allOf": [
        {
          "$ref": "../common-types.json#/definitions/ProxyResource"
        }
      ],
      "required": [
        "properties"
      ],
      "properties": {
        "properties": {
          "$ref": "#/definitions/DaprStateStoreResourceProperties"
        }
      }
    },
    "DaprStateStoreResourceProperties": {
      "type": "object",
      "allOf": [
        {
          "$ref": "basic-resource.json#/definitions/BasicResourceProperties"
        }
      ],
      "required": [
        "managed",
        "kind"
      ],
      "additionalProperties": false,
      "properties": {
        "managed": {
          "description": "Indicates if the resource is Radius-managed. For now only true is accepted for this Resource",
          "type": "boolean",
          "enum": [
            true
          ],
          "example": [
            true
          ]
        },
        "kind": {
          "description": "The Dapr StateStore kind. These strings match the format used by Dapr Kubernetes configuration format.",
          "type": "string",
          "enum": [
            "any",
            "state.sqlserver",
            "state.redis",
            "state.azure.tablestorage"
          ]
        }
      }
    }
  }
}
