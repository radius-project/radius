      ],
      "properties": {
        "kind": {
          "description": "The Dapr StateStore kind.",
          "type": "string",
          "enum": [
            "state.sqlserver"
          ]
        },
        "resource": {
          "description": "PubSub resource",
          "type": "string"
        }
      }
