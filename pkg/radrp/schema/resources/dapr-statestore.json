{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "DaprStateStoreResource": {
      "description": "Resource for Dapr state store",
      "type": "object",
      "x-ms-azure-resource": true,
      "allOf": [
        {
          "$ref": "../common-types.json#/definitions/ProxyResource"
        }
      ],
      "required": [
        "properties"
      ],
      "properties": {
