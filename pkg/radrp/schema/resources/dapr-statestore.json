      "properties": {
        "kind": {
          "description": "The Dapr StateStore kind",
          "type": "string",
          "enum": [
            "generic"
          ]
        },
        "type": {
          "description": "Dapr StateStore type. These strings match the format used by Dapr Kubernetes configuration format.",
          "type": "string",
          "example": [
            "state.zookeeper"
          ]
        },
        "version": {
          "description": "Dapr component version",
          "type": "string"
