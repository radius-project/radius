{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "GatewayResource": {
      "description": "Resource that specifies how traffic is exposed to the application.",
      "type": "object",
      "x-ms-azure-resource": true,
      "allOf": [
        {
          "$ref": "../common-types.json#/definitions/ProxyResource"
        }
      ],
      "properties": {
        "properties": {
          "$ref": "#/definitions/GatewayProperties"
        }
      }
    },
    "GatewayProperties": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "internal": {
          "type": "boolean"
        },
        "hostname": {
          "type": "object",
          "properties": {
            "prefix": {
              "description": "Specify a prefix for the hostname.",
              "type": "string"
            },
            "fullyQualifiedHostname": {
              "description": "Specify a fully-qualified domain name.",
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "routes": {
          "type": "array",
          "description": "Routes attached to this Gateway",
          "items": {
            "$ref": "#/definitions/GatewayRoute"
          }
        }
      }
    },
    "GatewayRoute": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": {
          "description": "The path to the service.",
          "type": "string"
        },
        "destination": {
          "description": "The HttpRoute source.",
          "type": "string"
        },
        "replacePrefix": {
          "description": "Optionally update the prefix when sending the request to the service.",
          "type": "string"
        }
      }
    }
  }
}