{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "DaprPubSubTopicResource": {
      "description": "Resource for Dapr Pub/Sub",
      "type": "object",
      "x-ms-azure-resource": true,
      "allOf": [
        {
          "$ref": "../common-types.json#/definitions/ProxyResource"
        }
      ],
      "required": [
        "properties"
      ],
      "properties": {
        "properties": {
          "$ref": "#/definitions/DaprPubSubTopicResourceProperties"
        }
      }
    },
    "DaprPubSubTopicResourceProperties": {
      "type": "object",
      "allOf": [
        {
          "$ref": "basic-resource.json#/definitions/BasicResourceProperties"
        }
      ],
      "additionalProperties": false,
      "required": [
        "kind"
      ],
      "properties": {
        "managed": {
          "description": "Indicates if the resource is Radius-managed. If false, a resource is required",
          "type": "boolean"
        },
        "kind": {
          "description": "The Dapr Pub/Sub kind. These strings match the format used by Dapr Kubernetes configuration format.",
          "type": "string",
          "enum": [
            "any",
            "pubsub.azure.servicebus"
          ]
        },
        "topic": {
          "description": "PubSub topic",
          "type": "string"
        },
        "resource": {
          "description": "PubSub resource, for unmanaged",
          "type": "string"
        }
      }
    }
  }
}
