                                "networkProfile": {
                                    "networkPlugin": "azure"
                                },
                                "podIdentityProfile": {
                                    "enabled": true
                                }
                            },
                            "tags": "[parameters('resourceTags')]",
                            "type": "Microsoft.ContainerService/managedClusters"
                        },
                        {
                            "apiVersion": "2018-09-01-preview",
                            "dependsOn": [
                                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('clusterName'))]"
